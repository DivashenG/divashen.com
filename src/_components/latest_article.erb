<div class="my-8 border-t border-zinc-100 border-b sm:border-b-0 py-8">
  <article>
    <%= render UI::Card.new do %>
      <%= render UI::Card::Title.new(href: url_for(article)) do %>
        <% if new? %>
          <span class="inline-flex items-center rounded-full bg-primary-100 px-2.5 py-0.5 text-xs font-medium text-primary-800 mr-1.5">New</span>
        <% end %>
        <span><%= article.data.title %></span>
      <% end %>

      <%= render UI::Card::Description.new(article.data.description) %>
      <%= render UI::Card::CTA.new("Read article") %>
    <% end %>
  </article>
</div>
