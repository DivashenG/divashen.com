<%= content_tag :article, class: "md:grid md:grid-cols-4 md:items-baseline" do %>
  <%= render UI::Card.new(class_name: "md:col-span-3") do %>
    <%= render UI::Card::Title.new(title, href: url_for(newsletter)) %>
    <%= render UI::Card::Description.new(description) %>
    <%= render UI::Card::CTA.new("Read edition") %>
  <% end %>
<% end %>
