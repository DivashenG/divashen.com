<%= render UI::SimpleLayout.new(
  title: resource.data.title,
  intro: resource.data.description,
  newsletter: site.data.newsletters.hotwire
) do %>
  <div class="flex max-w-3xl flex-col space-y-16">
    <% collections.hotwire.resources.each do |newsletter| %>
      <%= render Newsletter.new(newsletter) %>
    <% end %>
  </div>
<% end %>
